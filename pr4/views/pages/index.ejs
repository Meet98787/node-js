<%- include('../partials/header.ejs') %>
<div class="container">
  <div>
    <h1 class="text-center">Book Lists</h1>
    <a href="/add" class="btn btn-primary">
      Add
    </a>
  </div>
  <% if (books.length > 0) { %>
    <table class="table table-hover mt-2">
      <thead>
        <tr>
          <th>Id</th>
          <th>Title</th>
          <th>Type</th>
          <th>Author</th>
          <th>Published Year</th>
          <th>Stock</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% books.forEach((book, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= book.title %></td>
            <td><%= book.type %></td>
            <td><%= book.author %></td>
            <td><%= book.published %></td>
            <td><%= book.stock %></td>
            <td>$ <%= book.price %></td>
            <td>
              <a class="btn btn-warning" href="/edit/<%= book.id %>">EDIT</a>
              <a class="btn btn-danger" href="/delete/<%= book.id %>">DELETE</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h2 class="text-center">No record found</h2>
  <% } %>
</div>

<%- include('../partials/footer.ejs') %>

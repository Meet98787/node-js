<%-include('../partials/header.ejs')%>

<h1 class="">User</h1>
<a href="/add" class="btn btn-primary">ADD</a>
<div class="">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Gender</th>
        <th>hobbies</th>
        <th>Address</th>
        <th>City</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% userData.forEach((user,index)=>{ %>
      <tr class="">
        <td><%=user.name%></td>
        <td><%=user.email%></td>
        <td><%=user.password%></td>
        <td><%=user.gender%></td>
        <td><%=user.hobbies%></td>
        <td><%=user.address%></td>
        <td><%=user.city%></td>
        <td>
          <a class="btn btn-warning" href="/edit/<%=index%>">EDIT</a>
          <a class="btn btn-danger" href="/delete/<%=index%>">DELETE</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%-include('../partials/footer.ejs')%>
